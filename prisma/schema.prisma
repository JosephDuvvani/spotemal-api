generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Map {
  id       String   @id @default(uuid())
  name     String
  imageUrl String
  targets  Target[]
  scorers  Scorer[]
  Game     Game[]
}

model Target {
  id       String @id @default(uuid())
  name     String
  imageUrl String
  position Json
  map      Map    @relation(fields: [mapId], references: [id], onDelete: Cascade)
  mapId    String
}

model Game {
  id      String    @id @default(uuid())
  map     Map       @relation(fields: [mapId], references: [id], onDelete: Cascade)
  mapId   String
  spotted Json?
  start   DateTime?
  end     DateTime?
}

model Scorer {
  id       String @id @default(uuid())
  username String
  time     Int
  map      Map    @relation(fields: [mapId], references: [id], onDelete: Cascade)
  mapId    String
}
